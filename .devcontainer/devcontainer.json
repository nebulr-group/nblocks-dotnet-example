{
    "name": "HelloWebApp Dev Container",
    "build": {
      "dockerfile": "../Dockerfile",
      "context": ".."
    },
    "workspaceFolder": "/app",
    "forwardPorts": [5000],
    "runArgs": ["--init"],
    "settings": {
      "terminal.integrated.defaultProfile.linux": "bash",
      "dotnet.defaultSolution": "HelloWebApp.csproj"
    },
    "extensions": [
      "ms-dotnettools.csharp",
      "ms-azuretools.vscode-docker"
    ]  
  }